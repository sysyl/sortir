{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Ajouter un lieu{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col">
                <h3>Ajouter un lieu</h3>
                <hr>
            </div>
        </div>
        {{ form_start(formAddLocation) }}
        <div class="row justify-content-center">
            <div class="col-12 col-lg-4">
                <strong>{{ form_row(formAddLocation.nom) }}</strong>
            </div>
            <div class="col-12 col-lg-4">
                <strong>{{ form_row(formAddLocation.ville) }}</strong>
            </div>
            <div class="col-12 col-lg-4">
                <strong>{{ form_row(formAddLocation.adresse) }}</strong>
            </div>
        </div>
        <div class="row justify-content-center mt-4">
            <div class="col-12 col-md-6 col-lg-4">
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                {{ form_row(formAddLocation.ajouter) }}
            </div>
        </div>
        {{ form_end(formAddLocation) }}
    </div>



{% endblock %}
